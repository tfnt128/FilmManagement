﻿<MudCard>
    <MudCardMedia Image="@Image"></MudCardMedia>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Filmmaker!.Name</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2">@Filmmaker!.Bio</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Color="Color.Warning"
        Variant="Variant.Outlined"
        Href=@($"/EditFilmmaker/{Filmmaker!.Name}")>Details</MudButton>
    </MudCardActions>
</MudCard>
@code {
    [Parameter]
    public FilmmakerResponse? Filmmaker { get; set; }
    public string? Image { get; set; }

    protected override void OnInitialized()
    {
        Image = Filmmaker!.Image!.Contains("Image") ? $"https://localhost:7237/{Filmmaker!.Image}" : "images/kojima.png";
    }
}