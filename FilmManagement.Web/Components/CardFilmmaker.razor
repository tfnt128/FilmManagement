<style>
    .filmmaker-card-container {
        height: 100%;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        border-radius: 16px;
    }

        .filmmaker-card-container:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 60px rgba(120, 40, 200, 0.4);
        }

        .filmmaker-card-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(120, 40, 200, 0.1) 0%, rgba(200, 40, 120, 0.1) 100%);
            opacity: 0;
            transition: opacity 0.3s ease;
            pointer-events: none;
            z-index: 1;
        }

        .filmmaker-card-container:hover::before {
            opacity: 1;
        }

    .filmmaker-photo {
        width: 100%;
        height: 300px;
        object-fit: cover;
        object-position: center center;
        background: linear-gradient(135deg, rgba(120, 40, 200, 0.2) 0%, rgba(200, 40, 120, 0.2) 100%);
    }

    .photo-container {
        width: 100%;
        height: 300px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, rgba(120, 40, 200, 0.2) 0%, rgba(200, 40, 120, 0.2) 100%);
    }

        .photo-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .filmmaker-name {
        font-size: 1.4rem;
        font-weight: 700;
        margin-bottom: 8px;
        background: linear-gradient(90deg, #ffffff 0%, #e0e0e0 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        line-height: 1.3;
    }

    .filmmaker-bio {
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.9rem;
        line-height: 1.5;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        min-height: 4.5em;
    }

    .filmmaker-badge {
        position: absolute;
        top: 12px;
        left: 12px;
        background: rgba(120, 40, 200, 0.9);
        backdrop-filter: blur(10px);
        padding: 6px 12px;
        border-radius: 8px;
        font-weight: 700;
        font-size: 0.75rem;
        z-index: 2;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .details-button {
        transition: all 0.3s ease;
    }

        .details-button:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 12px rgba(120, 40, 200, 0.4);
        }

    .image-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 60px;
        background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
        z-index: 1;
    }
</style>

<MudCard Class="filmmaker-card-container" Elevation="4">
    <div style="position: relative;">
        <MudCardMedia Image="@filmmakerImage"
                      Class="filmmaker-photo"
                      Alt="@Filmmaker!.Name" />
        <div class="image-overlay"></div>
        <div class="filmmaker-badge">
            <MudIcon Icon="@Icons.Material.Filled.Person" Size="Size.Small" />
            <span>Filmmaker</span>
        </div>
    </div>

    <MudCardContent>
        <MudText Class="filmmaker-name">@Filmmaker!.Name</MudText>
        <MudText Class="filmmaker-bio" Title="@Filmmaker!.Bio">
            @Filmmaker!.Bio
        </MudText>
    </MudCardContent>

    <MudCardActions>
        <MudButton Color="Color.Primary"
                   Variant="Variant.Filled"
                   Href=@($"/EditFilmmaker/{Filmmaker!.Name}")
                   StartIcon="@Icons.Material.Filled.Visibility"
                   Class="details-button"
                   FullWidth="true">
            View Details
        </MudButton>
    </MudCardActions>
</MudCard>

@code {
    [Parameter]
    public FilmmakerResponse? Filmmaker { get; set; }

    private string filmmakerImage = "";

    protected override void OnInitialized()
    {
        if (!string.IsNullOrEmpty(Filmmaker?.Image))
        {
            if (Filmmaker.Image.Contains("/ProfileImages/"))
            {
                filmmakerImage = $"https://localhost:7237{Filmmaker.Image}";
            }
            else if (Filmmaker.Image.StartsWith("data:image"))
            {
                filmmakerImage = Filmmaker.Image;
            }
            else
            {
                filmmakerImage = "images/kojima.png";
            }
        }
        else
        {
            filmmakerImage = "images/kojima.png";
        }
    }
}