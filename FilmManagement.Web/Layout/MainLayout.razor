@inherits LayoutComponentBase
<MudThemeProvider IsDarkMode="true" Theme="currentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Surface" Fixed="true" Elevation="2">
        <MudImage Src="images/filmmaker-logo.png" Style="width: 60px;" />
    </MudAppBar>
    <MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu></NavMenu>
    </MudDrawer>
    <MudMainContent class="main-content pa-100">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private MudTheme currentTheme = new MudTheme()
        {
            PaletteDark = FilmManagementPallete.CreatePallete
        };
}